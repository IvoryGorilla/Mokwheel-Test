{% schema %}
{
  "name": "AX Hero Images 1",
  "class": "ax-hero-images-1",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hero Banner"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "default"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background Image Mobile"
    },
    {
      "type": "video",
      "id": "bg_video",
      "label": "Background Video"
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Background Opacity",
      "default": 50
    },
    {
      "type": "text",
      "id": "image_aspect_ratio",
      "label": "Aspect Ratio",
      "default": "3/1"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio_mobile",
      "label": "Aspect Ratio Mobile",
      "default": "1/1"
    },
    {
      "type": "text",
      "id": "block_max_width",
      "label": "Content Max Width",
      "default": "720px"
    },
    {
      "type": "text",
      "id": "min_height",
      "label": "Min Height",
      "default": "320px"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "is_popup",
      "label": "Popup",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "bg_is_inner",
      "label": "Background is inner",
      "default": false
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "img_width_desktop",
      "label": "Image Width Desktop",
      "default": "1920"
    },
    {
      "type": "text",
      "id": "img_width_mobile",
      "label": "Image Width Mobile",
      "default": "750"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "heading_type",
          "label": "Heading type",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            }
          ],
          "default": "h1"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Description"
        }
      ]
    },
    {
      "type": "breadcrumb",
      "name": "Breadcrumb",
      "settings": [
        {
          "type": "checkbox",
          "id": "position_set",
          "label": "Set position",
          "default": false,
          "info": "固定左上角位置"
        },
        {
          "type": "text",
          "id": "position_top",
          "label": "Position top",
          "default": "90px",
          "info": "Top position in px"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "count_down_text",
      "name": "Count Down Text",
      "settings": [
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#FFFFFF"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Announcement Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        },
        {
          "type": "text",
          "id": "countdown_date",
          "label": "Count Down",
          "default": "2023-05-15T00:00:00",
          "info": "格式: 2023-05-15T00:00:00"
        },
        {
          "type": "number",
          "id": "countdown_hours",
          "label": "多少小时内显示倒计时",
          "default": 48
        },
        {
          "type": "text",
          "id": "countdown_text",
          "label": "Count Down 文字",
          "default": "Only Remaining"
        },

        {
          "type": "checkbox",
          "id": "show_countdown",
          "label": "Show Count Down",
          "default": false
        }
      ]
    },
    {
      "type": "title_image",
      "name": "Title Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "list_image",
      "name": "List Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image Mobile"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "AX Hero Images 1"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};--content-max-width: {{ st.block_max_width }};
    --aspect-ratio: {{ st.image_aspect_ratio }};--aspect-ratio-mobile: {{ st.image_aspect_ratio_mobile  }};
{%- endcapture -%}

<style>
  [data-stid="{{ section.id }}"] {
    --st-min-height: {{ st.min_height }};
   }
  @media (max-width: 999px) {
  }
</style>

{% style %}
  .ax-hero-images-v1-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .ax-hero-images-vx1.ax-hero-images-v1-wrapper {
    aspect-ratio: var(--aspect-ratio);
    max-height: 100vh;
    width: 100%;
  }
  .ax-hero-images-vx1.ax-hero-images-v1-wrapper[data-bg-is-inner] {
    margin-left: var(--alp-padding-x);
    margin-right: var(--alp-padding-x);
    border-radius: clamp(var(--alp-border-radius), 2vw, calc(var(--alp-border-radius) * 1.5));
    width: auto;
  }
  .ax-hero-images-vx1-heading:not(:first-child) {
    margin-top: clamp(24px, 3vw, 40px);
  }
  .ax-hero-images-vx1-description p {
    margin: 0.5em 0;
    font-size: clamp(16px, 1.8vw, 20px);
    font-weight: 500;
    line-height: 1.35;
  }
  .ax-hero-images-vx1-heading h1.ax-hero-images-v1-heading {
    font-size: clamp(24px, 3.75vw, 48px);
    line-height: 1.25;
    font-weight: 600;
  }

  .ax-hero-images-v1-heading p {
    margin: 0;
  }

  .ax-hero-images-v1-buttons-wrapper:not(:empty) {
    margin-top: clamp(24px, 3vw, 52px);
    display: flex;
    gap: 8px;
  }

  .ax-hero-images-v1-button a.alp-btn.button-type-primary {
    border: 1px solid;
  }

  .ax-hero-images-v1-button a.alp-btn.button-type-primary:hover {
    border-color: var(--main-color);
  }

  .ax-hero-images-v1-button:not(:first-child) a.alp-btn.button-type-primary {
    background: transparent;
  }

  .ax-hero-images-v1-button:not(:first-child) a.alp-btn.button-type-primary:hover {
    background: #000;
    border-color: #000;
  }

  .ax-hero-images-v1-button:not(:first-child) a.alp-btn.button-type-primary span {
    color: #fff;
  }

  .ax-image-slide-bg-video.full-img-wrap + .alp-image-slide-bg.full-img-wrap {
    display: none;
  }

  .ax-hero-images-vx1-title-image img {
    aspect-ratio: auto;
    width: 70%;
    max-width: 420px;
    display: block;
  }

  .ax-list-images-v1-item img {
    aspect-ratio: auto;
    display: block;
    border-radius: var(--alp-border-radius);
    height: 100%;
  }

  .ax-hero-images-vx1.ax-hero-images-v1-wrapper.has-list-image {
    display: block;
    aspect-ratio: auto;
  }

  @media (min-width: 768px) {
    .ax-hero-images-v1-container.has-list-image {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
    }

    .ax-hero-images-v1-container.has-list-image > .ax-hero-images-v1-inner {
      width: 35%;
    }

    .ax-hero-images-v1-container.has-list-image > .ax-hero-images-v1-list-image-wrapper {
      width: 65%;
      padding-left: 32px;
      display: grid;
      grid-template-columns: 1fr 1fr 1.75fr;
      grid-template-rows: repeat(2, auto);
      gap: 12px;
    }
    .ax-hero-images-v1-container.has-list-image .ax-hero-images-v1-list-image-wrapper > div:nth-child(1) {
      grid-column: 1 / 2;
      grid-row: 1 / 2;
    }

    .ax-hero-images-v1-container.has-list-image .ax-hero-images-v1-list-image-wrapper > div:nth-child(2) {
      grid-column: 2 / 3;
      grid-row: 1 / 2;
    }

    .ax-hero-images-v1-container.has-list-image .ax-hero-images-v1-list-image-wrapper > div:nth-child(4) {
      grid-column: 3 / 4;
      grid-row: 1 / 3;
    }

    .ax-hero-images-v1-container.has-list-image .ax-hero-images-v1-list-image-wrapper > div:nth-child(3) {
      grid-column: 1 / 3;
      grid-row: 2 / 3;
    }
  }

  @media (max-width: 768px) {
    .ax-hero-images-v1-list-image-wrapper {
      margin-top: 32px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .ax-hero-images-vx1.ax-hero-images-v1-wrapper[data-bg-is-inner] {
      padding-top: calc(var(--padding-top) * 2px);
      padding-bottom: calc(var(--padding-top) * 2px);
    }
    .ax-hero-images-vx1.ax-hero-images-v1-wrapper {
      aspect-ratio: var(--aspect-ratio-mobile);
    }
  }
{% endstyle %}

{%- assign list_image_length = 0 -%}
{%- for block in section.blocks -%}
  {%- liquid
    assign bs = block.settings
  -%}
  {%- case block.type -%}
    {%- when 'list_image' -%}
      {%- assign list_image_length = list_image_length | plus: 1 -%}
  {%- endcase -%}
{%- endfor -%}

<div
  class="alp-section ax-hero-images-vx1 ax-hero-images-v1-wrapper overflow-hidden relative {{ st.text_alignment | prepend: "text-al-" }} {{ reset_spacing }} {{ st.custom_class }} {% if list_image_length > 0 %} has-list-image{% endif %}"
  style="{{ style }}"
  data-stid="{{- section.id -}}"
  data-title="{{- st.title | handle -}}"
  {% if st.is_popup %}
    data-popup
  {% endif %}
  {%- if st.bg_is_inner -%}
    data-bg-is-inner
  {%- endif -%}
>
  {%- if st.bg_video -%}
    <div
      class="ax-image-slide-bg-video full-img-wrap"
      style=""
      {%- if st.bg_is_inner -%}
        data-bg-is-inner
      {%- endif -%}
    >
      {{ st.bg_video | video_tag: loop: 'loop', muted: true, playsinline: true, autoplay: true, controls: false }}
      <div
        class="full-img-wrap"
        style="opacity:{{ st.bg_opacity | divided_by: 100.0 }};background-color:{{ st.bg_color }}"
      ></div>
    </div>
  {%- endif -%}
  {%- if st.bg_image or st.bg_image_mobile -%}
    <div
      class="alp-image-slide-bg full-img-wrap"
      style=""
      {%- if st.bg_is_inner -%}
        data-bg-is-inner
      {%- endif -%}
    >
      {% render 'alp-responsive-image',
        image: st.bg_image,
        image_mobile: st.bg_image_mobile,
        desktop_width: st.img_width_desktop,
        mobile_width: st.img_width_mobile,
        aspect_ratio: st.image_aspect_ratio,
        alt: st.title
      %}
      <div
        class="full-img-wrap"
        style="opacity:{{ st.bg_opacity | divided_by: 100.0 }};background-color:{{ st.bg_color }}"
      ></div>
    </div>
  {%- endif -%}

  {% comment %} Breadcrumb {% endcomment %}
  {%- for block in section.blocks -%}
    {% liquid
      assign bs = block.settings
    %}
    {%- case block.type -%}
      {%- when 'breadcrumb' -%}
        {% if bs.position_set %}
          <div
            class="ax-hero-images-vx1-breadcrumbs position_set_topleft page-width {{ container }}"
            style="--top:{{ bs.position_top }}"
          >
            {% render 'breadcrumbs' %}
          </div>
        {% endif %}
    {%- endcase -%}
  {%- endfor -%}
  {% comment %} Breadcrumb {% endcomment %}

  <div class="ax-section-container ax-hero-images-v1-container relative page-width {{ container }} {% if list_image_length > 0 %} has-list-image{% endif %}">
    <div class="ax-hero-images-v1-inner">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {% liquid
            assign bs = block.settings
          %}
          {%- case block.type -%}
            {%- when 'title_image' -%}
              <div class="ax-hero-images-vx1-title-image">
                {% if bs.image != blank %}
                  <div class="">
                    {% render 'alp-responsive-image', image: bs.image %}
                  </div>
                {% endif %}
              </div>

            {%- when 'heading' -%}
              {%- if bs.text != blank -%}
                <div class="ax-hero-images-vx1-heading">
                  <{{ bs.heading_type }} class="ax-hero-images-v1-heading">
                    {{- bs.text | newline_to_br -}}
                  </{{ bs.heading_type }}>
                </div>
              {%- endif -%}
            {%- when 'description' -%}
              {%- if bs.text != blank -%}
                <div class="ax-hero-images-vx1-description">{{ bs.text }}</div>
              {%- endif -%}
            {%- when 'breadcrumb' -%}
              {% unless bs.position_set %}
                <div class="ax-hero-images-vx1-breadcrumbs">
                  {% render 'breadcrumbs' %}
                </div>
              {% endunless %}
            {%- when 'count_down_text' -%}
              <div class="ax_banner__count_down_text" style="--color:{{ bs.color }}">
                <div class="ax-announcement-bar-ixx">
                  {%- if bs.link -%}
                    <a href="{{ bs.link }}"></a>
                  {%- endif -%}
                  <div class="ax-announcement-bar-text">
                    {{ bs.text }}
                  </div>
                  {%- if bs.show_countdown -%}
                    {% render 'alp-countdown-snippet2',
                      text: bs.countdown_text,
                      id: block.id,
                      countdown_date: bs.countdown_date,
                      countdown_hours: bs.countdown_hours
                    %}
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      {% endif %}
      {%- if section.blocks.size > 0 -%}
        <div class="ax-hero-images-v1-buttons-wrapper">
          {%- for block in section.blocks -%}
            {%- liquid
              assign bs = block.settings
            -%}
            {%- case block.type -%}
              {%- when 'button' -%}
                <div class="ax-hero-images-v1-button">
                  {% render 'alp-btn',
                    url: bs.url,
                    type: 'primary',
                    text: bs.text,
                    textcolor: '#000',
                    bgcolor: '#FFF',
                    size: 'normal',
                    popup: st.is_popup
                  %}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {% endif %}
    </div>
    {%- if list_image_length > 0 -%}
      <div class="ax-hero-images-v1-list-image-wrapper">
        {%- for block in section.blocks -%}
          {%- liquid
            assign bs = block.settings
          -%}
          {%- case block.type -%}
            {%- when 'list_image' -%}
              {%- assign list_image_length = list_image_length | plus: 1 -%}
              <div class="ax-list-images-v1-item">
                {% render 'alp-responsive-image', image: bs.image, image_mobile: bs.image_mobile %}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    //
  });
</script>
