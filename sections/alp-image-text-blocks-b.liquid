{% schema %}
{
  "name": "Alp Image Text Blocks B",
  "class": "alp-image-text-blocks-b",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section Title"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio",
      "label": "Aspect Ratio",
      "default": "1.5/1"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio_mobile",
      "label": "Aspect Ratio Mobile",
      "default": "1/1.35"
    },
    {
      "type": "text",
      "id": "min_height_desktop",
      "label": "Min Height Desktop",
      "default": "550px"
    },
    {
      "type": "text",
      "id": "min_height_mobile",
      "label": "Min Height Mobile",
      "default": "300px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Block Item",
      "settings": [
        {
          "type": "text",
          "id": "track_name",
          "label": "Track Name",
          "default": "banner"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#ffffff"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#ffffff"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image Mobile"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "SHOP NOW"
        },
        {
          "type": "color",
          "id": "link_text_color",
          "label": "Link Text Color",
          "default": "#0B0704"
        },
        {
          "type": "color",
          "id": "link_bg_color",
          "label": "Link Background Color",
          "default": "#ffffff"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alp Image Text Blocks B"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

{% style %}
  .alp-image-text-blocks-new-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: clamp(16px, 3vw, 24px);
  }

  .alp-image-text-blocks-b-item {
    overflow: hidden;
    background: #000;
    border-radius: var(--alp-border-radius);
  }

  .alp-image-text-blocks-b-item-inner {
    position: relative;
    z-index: 10;
    color: #fff;
    transition: 0.3s;
  }
  .alp-image-text-blocks-b-item-inner p{
    margin: 0;
  }

  .alp-image-text-blocks-b-item:hover .full-img-wrap {
    opacity: 0.8;
  }

  .alp-image-text-blocks-b-item .full-img-wrap {
    transition: 0.5s;
  }

  .alp-image-text-blocks-b-item a.full-aa {
    z-index: 30;
  }

  .alp-image-text-blocks-b-item-title{
    font-size: clamp(32px, 2.85vw, 48px);
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 8px;
  }

  .alp-image-text-blocks-b-item-description{
    font-size: clamp(18px, 1vw, 18px);
    line-height: 1.5;
  }
  .alp-image-text-blocks-b-item:hover .alp-btn.button-type-primary{
    background: var(--main-color);
    border-color: var(--main-color);
  }
  .alp-image-text-blocks-b-item:hover .alp-btn.button-type-primary span{
    color: #fff;
  }

  .alp-image-text-blocks-b-item-button{
    margin-top: clamp(40px, 3.6vw, 64px);
  }
  .alp-image-text-blocks-b-item-button a span{
    font-size: clamp(14px, 1vw, 16px);
  }

  .alp-image-text-blocks-b-item-button .alp-btn.small:not(.btn-link) svg{
    display: none;
  }

  .alp-image-text-blocks-b-item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .alp-image-text-blocks-b-item .alp-image-text-blocks-b-item-inner {
      padding: clamp(16px, 3vw, 64px);
      width: 100%;
  }

  @media (max-width: 1720px) and (min-width: 1000px){
    .alp-image-text-blocks-b-item-button{
      /* bottom: 20px; */
    }
  }

  @media (min-width: 999.1px){
    .alp-image-text-blocks-new-container{
      grid-template-columns: 1fr 1fr;
    }
    .alp-image-text-blocks-b-item {
      min-height: {{ st.min_height_desktop }};
      aspect-ratio: {{ st.image_aspect_ratio }};
      width: 100%;
    }

  }
  @media (max-width: 999px){
    .alp-image-text-blocks-b-item {
      min-height: {{ st.min_height_mobile }};
      aspect-ratio: {{ st.image_aspect_ratio_mobile }};
      width: 100%;
    }

    .alp-image-text-blocks-b-item-button{
      position: relative;
      margin-top: 40px;
      bottom: 0;
    }
    .alp-image-text-blocks-b-item-button .alp-btn.small:not(.button-type-btn-link){
      padding: 6px 12px;
    }
  }
{% endstyle %}

<div
  class="alp-section alp-image-text-blocks-new-wrapper alp-image-text-blocks-b {{ reset_spacing }}"
  style="{{ style }}"
>
  <div class="alp-section-container alp-image-text-blocks-new-container page-width {{ container }}">
    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
        {% liquid
          assign bs = block.settings
        %}
        <div class="alp-image-text-blocks-b-item relative">
          {%- if bs.url != blank -%}
            <a
              class="full-aa {% render 'track-tag-classname', name: bs.track_name %}"
              href="{{ bs.url }}"
              title="{{ bs.text }}"
            ></a>
          {%- endif -%}
          {%- if bs.image -%}
            <div class="full-img-wrap">
              {% render 'alp-responsive-image',
                image: bs.image,
                image_mobile: bs.image_mobile,
                desktop_width: 1200,
                mobile_width: 400
              %}
            </div>
          {%- endif -%}
          <div class="alp-image-text-blocks-b-item-inner">
            <div class="alp-image-text-blocks-b-item-title headline__h4" style="color: {{ bs.title_color }};">
              {{ bs.title }}
            </div>
            <div class="alp-image-text-blocks-b-item-description" style="color: {{ bs.description_color }};">
              {{ bs.description }}
            </div>
            {%- if bs.link_text != blank -%}
              <div class="alp-image-text-blocks-b-item-button">
                {% render 'alp-btn',
                  url: bs.url,
                  type: 'primary',
                  text: bs.link_text,
                  textcolor: bs.link_text_color,
                  bgcolor: bs.link_bg_color,
                  size: 'small'
                %}
              </div>
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    //
  });
</script>
