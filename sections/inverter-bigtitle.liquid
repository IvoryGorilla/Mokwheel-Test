{% schema %}
{
  "name": "Inverter Bigtitle",
  "class": "inverter-bigtitle",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Inverter Bigtitle"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};
{%- endcapture -%}

{% style %}
  .inverter-bigtitle-container {
    padding-top: 120px;
    padding-bottom: 120px;
  }
  .inverter-bigtitle-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }
  .inverter-bigtitle-label {
    font-size: 18px;
    font-weight: 500;
    line-height: 120%;
    text-align: center;
    text-transform: uppercase;
    padding: 10px 20px;
    background: #e83f0c;
  }
  .inverter-bigtitle-title {
    font-size: 64px;
    font-weight: 800;
    line-height: 120%;
    text-align: center;
    text-transform: uppercase;
  }
  .inverter-bigtitle-subtitle {
    font-size: 24px;
    font-weight: 600;
    line-height: 120%;
    text-align: center;
  }
  .inverter-bigtitle-content {
    margin-top: 64px;
  }
  .inverter-bigtitle-image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    margin: auto;
    animation: floatUpDown 2s ease-in-out infinite;
  }
  .inverter-bigtitle-image img {
    display: block;
    height: 100%;
  }
  @keyframes floatUpDown {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px); /* 向上浮动10像素 */
    }
  }
  @media screen and (max-width: 999px) {
    .inverter-bigtitle-container {
      padding-top: 72px;
      padding-bottom: 60px;
    }
    .inverter-bigtitle-header {
      gap: 16px;
    }
    .inverter-bigtitle-label {
      font-size: 14px;
    }
    .inverter-bigtitle-title {
      font-size: 34px;
    }
    .inverter-bigtitle-subtitle {
      font-size: 16px;
    }
    .inverter-bigtitle-image {
      width: 48px;
      height: 48px;
    }
    .inverter-bigtitle-content {
      margin-top: 32px;
    }
  }
{% endstyle %}

<div class="alp-section {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }} inverter-bigtitle-container">
    <div class="inverter-bigtitle-header">
      <div class="inverter-bigtitle-label">{{ st.label }}</div>
      <h1 class="inverter-bigtitle-title">{{ st.title }}</h1>
      <div class="inverter-bigtitle-subtitle">{{ st.subtitle }}</div>
    </div>
    <div class="inverter-bigtitle-content">
      {%- if st.image != blank -%}
        <div class="inverter-bigtitle-image">
          <img
            src="{{ st.image | image_url }}"
            width="auto"
            height="auto"
          >
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

