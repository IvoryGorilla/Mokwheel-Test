{% schema %}
{
  "name": "Inverter Detail",
  "class": "inverter-detail-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mb",
      "label": "Image Mobile"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "video",
      "id": "video_mb",
      "label": "Video Mobile"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "Desc"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Url"
    },
    {
      "type": "text",
      "id": "aspect_ratio",
      "label": "Aspect Ratio",
      "default": "1920/800"
    },
    {
      "type": "text",
      "id": "aspect_ratio_mobile",
      "label": "Aspect Ratio Mobile",
      "default": "375/650"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Inverter Detail"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};
{%- endcapture -%}


<style>
  [data-stid="{{ section.id }}"] {
   --aspect-pc: {{ st.aspect_ratio }};
   --aspect-mb: {{ st.aspect_ratio_mobile }};
  }
</style>

{% style %}
  .inverter-detail-container {
    max-width: none;
    padding: 0;
  }
  .inverter-detail-banner {
    position: relative;
  }
  .inverter-detail-video video {
    width: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: var(--aspect-pc);
  }
  .inverter-detail-image img {
    aspect-ratio: var(--aspect-pc);
    display: block
  }
  .inverter-detail-content {
    position: absolute;
    left: 7%;
    bottom: 13%;
    z-index: 10;
    max-width: 500px;
  }
  .inverter-detail-title {
    font-size: 48px;
    font-weight: bold;
    line-height: 120%;
    text-transform: capitalize;
  }
  .inverter-detail-desc {
    font-size: 20px;
    font-weight: 500;
    line-height: 180%;
    margin-top: 10px;
  }
  .inverter-detail-button {
    margin-top: 40px;
    padding: 14px 0;
    text-align: center;
    font-size: 16px;
    font-weight: 500;
    line-height: 120%;
    border-radius: 4px;
    color: #1A1A1A;
    background: #ffffff;
    display: block;
    width: 200px;
  }
  @media screen and (max-width: 999px) {
    .inverter-detail-video video {
      aspect-ratio: var(--aspect-mb);
    }
    .inverter-detail-image img {
      aspect-ratio: var(--aspect-mb);
      display: block
    }
    .inverter-detail-content {
      left: 40px;
      bottom: 60px;
      max-width: 295px;
    }
    .inverter-detail-title {
      font-size: 24px;
    }
    .inverter-detail-desc {
      font-size: 16px;
    }
    .inverter-detail-button {
      font-size: 14px;
      padding: 14px 0px;
      width: 143px;
    }
  }
{% endstyle %}

<div class="alp-section {{ reset_spacing }}" data-stid="{{ section.id }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }} inverter-detail-container">
    <div class="inverter-detail-banner">
      {%- if st.video != blank -%}
        <div class="inverter-detail-video hide_mobile">
          <video
            class="lazy"
            muted
            preload
            autoplay
            loop
            x5-video-player-type="h5"
            x5-video-player-fullscreen="true"
            x5-playsinline
            playsinline
            webkit-playsinline
          >
            {%- for source in st.video.sources -%}
              <source data-src="{{ source.url }}" type="video/{{ source.format }}">
            {%- endfor -%}
          </video>
        </div>
      {%- elsif st.image != blank -%}
        <div class="inverter-detail-image hide_mobile">
          <img
            src="{{ st.image | image_url: width: 1920 }}"
            width="auto"
            height="auto"
          >
        </div>
      {%- endif -%}

      {%- if st.video_mb != blank -%}
        <div class="inverter-detail-video hide_desktop">
          <video
            class="lazy"
            muted
            preload
            autoplay
            loop
            x5-video-player-type="h5"
            x5-video-player-fullscreen="true"
            x5-playsinline
            playsinline
            webkit-playsinline
          >
            {%- for source in st.video_mb.sources -%}
              <source data-src="{{ source.url }}" type="video/{{ source.format }}">
            {%- endfor -%}
          </video>
        </div>
      {%- elsif st.image_mb != blank -%}
        <div class="inverter-detail-image hide_desktop">
          <img
            src="{{ st.image_mb | image_url: width: 800 }}"
            width="auto"
            height="auto"
          >
        </div>
      {%- endif -%}
      <div class="inverter-detail-content">
        <h2 class="inverter-detail-title">
          {{ st.title }}
        </h2>
        <div class="inverter-detail-desc">
          {{ st.desc }}
        </div>
        {%- if st.button != blank -%}
          <a class="inverter-detail-button" href="{{ st.url }}">
            {{ st.button }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

