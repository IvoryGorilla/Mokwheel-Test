{% schema %}
{
  "name": "Alp Page",
  "class": "alp-page-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Page"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item_link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Navigation"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alp Page Section"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

{% style %}
{% endstyle %}

<div class="alp-section {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }}">
    <div class="the-page-wrapper {% if section.blocks.size > 0 %}has-blocks{% endif %}">
      {%- if section.blocks.size > 0 -%}
          <div class="the-page-blocks swiper">
            {%- for block in section.blocks -%}
              {% liquid
                assign bs = block.settings
              %}
              {%- case block.type -%}
                {%- when 'item_link' -%}
                  <div class="alp__page_menu_links swiper-wrapper">
                    {% for link in bs.link_list.links -%}
                      <div
                        class="swiper-slide text_content page_menu_link{% if link.current %} current{% endif %}"
                      >
                        {{ link.title | link_to: link.url }}
                      </div>
                    {%- endfor %}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
      {% endif %}
      <div class="the-page-content the-content">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
      let swiperVar = new Swiper('.the-page-blocks.swiper',{
        breakpoints: { 
            320: { //当屏幕宽度大于等于320 
              slidesPerView: 2.8, 
              spaceBetween: 24
            },
            768: { //当屏幕宽度大于等于768  
              slidesPerView: 6, 
              spaceBetween: 'auto'
            }
          }
      })
  });
</script>
