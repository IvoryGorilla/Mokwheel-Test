        }
        .madia-img-all .madia_image:hover .iconImage{
            display: block;
        }
        .madia-img-all .madia_image:hover .madia-img-info::after{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top,rgba(0,0,0,0.7),rgba(0,0,0,0));
        }
        .madia-img-all .madia_image:first-child .madia-img-info::after{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top,rgba(0,0,0,0.7),rgba(0,0,0,0));
        }
        .madia-img-all .madia_image:nth-child(6n+1) .title{
            font-size: 64px;
            font-weight: 600;
            line-height: 1;
        }
        .madia-img-all .madia_image:nth-child(6n+2) .title,.madia-img-all .madia_image:nth-child(6n+3) .title{
            font-size: 34px;
            font-weight: 600;
            z-index: 2;
            line-height: 1.5;
            width: 70%;
        }
        .madia-img-all .madia_image:nth-child(6n+4) .title,.madia_image:nth-child(6n+5) .title,.madia_image:nth-child(6n+6) .title {
            font-size: 22px;
            font-weight: 600;
            z-index: 2;
            line-height: 1.5;
            width: 70%;
        }
        .madia-img-all .madia_image:nth-child(6n+1) .img-title{
            color: #ffffff;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
            width: 100%;
            z-index: 1;
            text-align: center;
        }
        .madia-img-all .madia_image:nth-child(6n+2) .img-title,.madia-img-all .madia_image:nth-child(6n+3) .img-title{
            position: absolute;
            bottom: -10px;
            color: #ffffff;
            line-height: 1;
            display: flex;
            flex-direction: column;
            height: 100%;
            padding: 2%;
            justify-content: space-around;
        } 
        .madia-img-all .madia_image:nth-child(6n+4) .img-title,.madia_image:nth-child(6n+5) .img-title,.madia_image:nth-child(6n+6) .img-title{
            position: absolute;
            bottom: 0;
            color: #ffffff;
            display: flex;
            flex-direction: column;
