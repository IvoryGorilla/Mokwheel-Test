            justify-content: space-around;
            padding: 1%;
        } 
        
        .madia-img-all .copyright{
            font-size: 18px;
            font-weight: 500;
            z-index: 2;
        }
        .madia-img-all .iconImage{
            position: absolute;
            right: 40px;
            bottom: 40px;
            z-index: 2;
            display: none;
        }
        .madia-img-all .iconImage svg{
            width: 42px;
            height: auto;
        }
        .madia-img-all .img-title_desc{
            display: none;
        }
        .madia-img-all .madia_image:first-child .img-title_desc{
            display: block;
        }
        .madia-img-all .madia_image:nth-child(6n+1){
            width: 100%;
        } 
        .madia-img-all .madia_image:nth-child(6n+2),.madia_image:nth-child(6n+3){
            width: 50%;
        } 
        .madia-img-all .madia_image:nth-child(6n+4),.madia_image:nth-child(6n+5),.madia_image:nth-child(6n+6){
            width: 33.3%;
        } 
        .madia-img-all .madia_image:nth-child(6n+2) .img-title .title,.madia-img-all .madia_image:nth-child(6n+3) .img-title .title,.madia_image:nth-child(6n+4) .img-title .title,.madia_image:nth-child(6n+5) .img-title .title,.madia_image:nth-child(6n+6) .img-title .title{
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
        }
    }
</style>
<section>
    <div class="media-img-wrapper" >
        {% render 'breadcrumbs' %}
        <div class="madia-img-all">
            {% for block in section.blocks %}
                <a href="{{block.settings.link}}" class="madia_image">
                    <div class="madia-image">
                        {% if block.settings.img != black %}
                            <img loading="lazy" sizes="(max-width: 740px), (max-width: 999px)" class="pc" {% render 'image-attributes', image: block.settings.img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
                            <img loading="lazy" sizes="(max-width: 740px), (max-width: 999px)" class="mobile" {% render 'image-attributes', image: block.settings.mobile_img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
                        {% endif %}
                    </div>
                    <div class="madia-img-info">
                        <div class="img-title_desc pc">
                            <div class="img-title">
                                <div class="title">{{block.settings.title}}</div>
                                <div class="copyright">{{block.settings.copyright}}</div> 
                            </div>
                        </div>
                        <div class="iconImage" style="justify-content:{{block.settings.mobile_position}} ;">{{block.settings.icon}}</div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
   "name": "madia img",
  "settings": [
    {
        "type": "select",
        "id": "mobile_position_bottom",
        "label": "mobile icon position bottom",
        "default": "center",
        "options": [
            {
                "value": "column",
                "label": "left top"
            },
            {
                "value": "column-reverse",
                "label": "left bottom"
            },
            {
                "value": "center",
                "label": "center"
            },
            {
                "value": "flex-start",
                "label": "right top"
            },
            {
                "value": "flex-end",
                "label": "right bottom"
            }
        ]
    }
  ],
   "blocks": [
        {
            "name": "madia",
            "type": "madia",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "pc image"
                },
                {
                    "type": "image_picker",
                    "id": "mobile_img",
                    "label": "mobile img"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "title"
                },
                {
                    "type": "text",
                    "id": "copyright",
                    "label": "title"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "link"
                },
                {
                    "type": "textarea",
                    "id": "icon",
                    "label": "icon"
                }
            ]
        }
   ],
  "presets": [
    {
        "name":"madia img"
    }
  ]
}
{% endschema %}