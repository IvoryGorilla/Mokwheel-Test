<style>
    .pc{
        display: block;
    }
    .mobile{
        display: none;
    }
    .madia-img-all .iconImage  path{
        fill: #ffffff;
    }
    .madia-img-all img{
        width: 100%;
    }
    .media-img-wrapper{
        position: relative;
    }
    .media-img-wrapper .breadcrumbs{
        position: absolute;
        top: 32px;
        left: calc(var(--alp-padding-x)* 2);;
        z-index: 3;
    }
    .media-img-wrapper .breadcrumbs .alp__breadcrumb-item{
        color: #fff;
    }
    @media (min-width:1200px){
        .madia-img-all .madia_image:hover .img-title_desc{
            display: block;
        }
        .madia-img-all .madia_image:hover .iconImage{
            display: block;
        }
        .madia-img-all .madia_image:hover .madia-img-info::after{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top,rgba(0,0,0,0.7),rgba(0,0,0,0));
        }
        .madia-img-all .madia_image:first-child .madia-img-info::after{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top,rgba(0,0,0,0.7),rgba(0,0,0,0));
        }
        .madia-img-all .madia_image:nth-child(6n+1) .title{
            font-size: 64px;
            font-weight: 600;
            width: 86%;
            margin: 0 auto;
            line-height: 1;
        }
        .madia-img-all .madia_image:nth-child(6n+2) .title,.madia_image:nth-child(6n+3) .title{
            font-size: 64px;
            font-weight: 600;
            z-index: 2;
            width: 68%;
        }
        .madia-img-all .madia_image:nth-child(6n+4) .title,.madia_image:nth-child(6n+5) .title,.madia_image:nth-child(6n+6) .title {
            font-size: 36px;
            font-weight: 600;
            z-index: 2;
            width: 78%;
            line-height: 1.3;
        }
        .madia-img-all .madia_image:nth-child(6n+1) .img-title{
            color: #ffffff;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
            width: 100%;
            z-index: 1;
            text-align: center;
        }
        .madia-img-all .madia_image:nth-child(6n+2) .img-title,.madia-img-all .madia_image:nth-child(6n+3) .img-title{
            position: absolute;
            bottom: -16px;
            color: #ffffff;
            line-height: 1;
            display: flex;
            flex-direction: column;
            height: 100%;
            padding: 3%;
            justify-content: space-around;
        } 
        .madia-img-all .madia_image:nth-child(6n+4) .img-title,.madia_image:nth-child(6n+5) .img-title,.madia_image:nth-child(6n+6) .img-title{
            position: absolute;
            bottom: 0;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: space-around;
            padding: 1%;
        } 
        .madia-img-all .madia_image:nth-child(6n+2) .img-title .title,.madia-img-all .madia_image:nth-child(6n+3) .img-title .title,.madia_image:nth-child(6n+4) .img-title .title,.madia_image:nth-child(6n+5) .img-title .title,.madia_image:nth-child(6n+6) .img-title .title{
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
        }
        .madia-img-all .copyright{
            font-size: 18px;
            font-weight: 500;
            z-index: 2;
        }
        .madia-img-all .iconImage{
            position: absolute;
            right: 40px;
            bottom: 40px;
            z-index: 2;
            display: none;
            
        }
        .madia-img-all .iconImage svg{
            width: 60px;
            height: auto;
        }
        .madia-img-all .madia_image .img-title_desc{
            display: none;
        }
        .madia-img-all .madia_image:first-child .img-title_desc{
            display: block;
        }
    }
    .madia-img-all{
        display: flex;
        flex-wrap: wrap;
    }
    .madia-img-all .madia_image{
        position: relative; 
    }
    .madia-img-all .madia_image:nth-child(6n+1){
        width: 100%;
    } 
    .madia-img-all .madia_image:nth-child(6n+2),.madia_image:nth-child(6n+3){
        width: 50%;
    } 
    .madia-img-all .madia_image:nth-child(6n+4),.madia_image:nth-child(6n+5),.madia_image:nth-child(6n+6){
        width: 33.3%;
    }
    @media (max-width:750px){
        .madia-img-all img{
            aspect-ratio: 1/1;
        }
        .pc{
            display: none;
        }
        .mobile{
            display: block;
        }
        .madia-img-all .madia_image{
            position: relative;
        }
        {%- if section.settings.mobile_position_bottom == 'column' -%}
            .madia-img-all .iconImage{
                position: absolute;
                display: flex;
                bottom: 0;
                z-index: 2;
                width: 100%;
                height: 100%;
                padding: 20px;
                flex-flow: {{section.settings.mobile_position_bottom}};
            }
        {%- elsif section.settings.mobile_position_bottom == 'column-reverse' -%}
            .madia-img-all .iconImage{
                position: absolute;
                display: flex;
                bottom: 0;
                z-index: 2;
                width: 100%;
                height: 100%;
                padding: 20px;
                flex-flow: {{section.settings.mobile_position_bottom}};
            }
        {%- elsif section.settings.mobile_position_bottom == 'flex-start' -%}
            .madia-img-all .iconImage{
                position: absolute;
                display: flex;
                right: 0;
                bottom: 0;
                z-index: 2;
                height: 100%;
                padding: 20px;
                align-items: {{section.settings.mobile_position_bottom}};
            }
        {%- elsif section.settings.mobile_position_bottom == 'flex-end' -%}
            .madia-img-all .iconImage{
                position: absolute;
                display: flex;
                right: 0;
                bottom: 0;
                z-index: 2;
                height: 100%;
                padding: 20px;
                align-items: {{section.settings.mobile_position_bottom}};
            }
        {%- else -%}
            .madia-img-all .iconImage{
                position: absolute;
                display: flex;
                bottom: 0;
                z-index: 2;
                width: 100%;
                height: 100%;
                padding: 30px;
                justify-content: {{section.settings.mobile_position_bottom}};
            }
        {%- endif -%}
        .madia-img-all .iconImage{
            padding: 10px;
        }
        .madia-img-all .iconImage  svg{
            width: 24px;
            height: auto;
        }
    }
    @media (min-width:750px) and (max-width:1200px){
        .madia-img-all
        {
            display: flex;
            flex-wrap: wrap;
        }
        .madia-img-all .madia_image{
