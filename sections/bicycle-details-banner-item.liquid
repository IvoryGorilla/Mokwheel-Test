{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

<style>
  [data-stid="{{ section.id }}"] {
   --block-max-width: {{ st.block_max_width }};
   --st-min-height: {{ st.min_height }};
  }
</style>
<style>
  .bicycle-details-banner-item .desc.headline__h5 p {
    margin-top: 0;
  }
  .bicycle-details-banner-item .keySwiperImage {
    margin-top: calc(var(--alp-gutter-y) * 1.25);
  }
  @media screen and (min-width: 741px) {
    .bicycle-details-banner-item .Btitle {
      /* font-family: OPPOSans; */
      text-transform: capitalize;
    }
    .bicycle-details-banner-item .image {
      border-radius: 12px;
      overflow: hidden;
      position: relative;
    }
    .bicycle-details-banner-item .image img {
      width: 100%;
      display: block;
      height: auto;
    }
    .bicycle-details-banner-item .content {
      position: absolute;
      bottom: 4.5%;
      left: 7%;
      color: #fff;
      /* font-family: Poppins; */
      text-transform: capitalize;
    }
    .bicycle-details-banner-item .desc {
      font-weight: 300;
      font-size: 10px;
      text-transform: capitalize;
    }
    .bicycle-details-banner-item .desc p {
      line-height: 1.2;
    }
    .bicycle-details-banner-item .swiper-button-prev::after,
    .bicycle-details-banner-item .swiper-button-next::after {
      display: none;
    }
    .jianju {
      margin-top: calc(var(--alp-gutter-y) * 1.5);
    }
  }

  @media screen and (max-width: 740px) {
    .bicycle-details-banner-item {
    }
    .bicycle-details-banner-item .Btitle {
      text-align: center;
    }
    .bicycle-details-banner-item .desc.headline__h5 p {
      margin-top: 0;
    }
    .bicycle-details-banner-item .content {
      position: absolute;
      bottom: 4.5%;
      left: 9%;
      font-size: 10px;
      color: #fff;
      text-transform: capitalize;
    }
    .bicycle-details-banner-item .image {
      border-radius: 12px;
      overflow: hidden;
      position: relative;
    }
    .bicycle-details-banner-item .image img {
      width: 100%;
      display: block;
      height: auto;
    }
    /* .bicycle-details-banner-item .desc {
      position: absolute;
      top: 74%;
      left: 9%;
      text-transform: capitalize;
    } */
    .bicycle-details-banner-item .swiper-button-prev::after,
    .bicycle-details-banner-item .swiper-button-next::after {
      display: none;
    }
    .bicycle-details-banner-item .jianju {
      margin-top: calc(var(--alp-gutter-y) * 1);
    }
    .bicycle-details-banner-item .keySwiperImage {
      margin-top: calc(var(--alp-gutter-y) * 1);
    }
  }
</style>
<div class="alp-section overflow-hidden {{ reset_spacing }}" data-stid="{{ section.id }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }}">
    <div class="bicycle-details-banner-item bicycle-details">
      <div class="distance">
        <div class="Btitle headline__h2s ">{{ section.settings.Btitle }}</div>
      </div>
      <div class="swiper keySwiperImage overflow-visible" id="{{ section.id }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="image">
                {% render 'alp-single-image', image: block.settings.image, width: 1280 %}
              </div>
              <div class="content">
                <div class="subBtitle headline__h4 ">{{ block.settings.subBtitle }}</div>
                <div class="desc headline__small ">{{ block.settings.desc }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-navs swiper-pagination-products jianju">
          {% render 'swiper-pagination', class: 'pagination-products' %}
          {% render 'swiper-navigation', class: '' %}
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    let swiperId = '{{ section.id }}';
    let swiperIdnum = swiperId.replace(/\D/g, '');
    let swiperVar = 'TheSwiper' + swiperIdnum;
    swiperVar = new Swiper('.keySwiperImage#{{ section.id }}', {
      slidesPerView: 1,
      spaceBetween: 10,
      breakpoints: {
        768: {
          //当屏幕宽度大于等于768
          slidesPerView: 3,
          spaceBetween: alp_global.gap * 1.5,
        },
        320: {
          //当屏幕宽度大于等于320
          slidesPerView: 1.2,
          spaceBetween: 12,
        },
      },
      pagination: {
        el: '.pagination-products',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>
{% schema %}
{
  "name": "bd-banner-item",
  "class": "bd-banner-item",
  "settings": [
    {
      "type": "richtext",
      "id": "Btitle",
      "label": "Big Btitle"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio",
      "label": "Image Aspect Ratio",
      "default": "1/1"
    },
    {
      "type": "text",
      "id": "block_max_width",
      "label": "Block Max Width",
      "default": "420px"
    },
    {
      "type": "text",
      "id": "min_height",
      "label": "Min Height",
      "default": "220px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "Item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "subBtitle",
          "label": "Sub Btitle"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Desc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "bd-banner-item"
    }
  ]
}
{% endschema %}
