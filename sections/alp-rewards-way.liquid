{% schema %}
{
  "name": "Alp Rewards Way",
  "class": "alp-rewards-way",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Block Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alp Rewards Way"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

{% style %}
.alp-rewards-way-bigTitle{
  font-size: clamp(24px, 2.2vw, 36px);
  text-align: center;
  margin-bottom: 0;
}
 .alp-rewards-way-con{
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
  margin-top: 48px;
 }
 .alp-rewards-way-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px;
  border-radius: 8px;
  background: #F8F8F8;
 }
 .alp-rewards-way-item-title{
  margin-top: 24px;
  font-size: clamp(20px, 1.6vw, 24px);
  line-height: 1.2;
 }
 .alp-rewards-way-item-desc{
  font-size: clamp(16px, 1.15vw, 16px);
  line-height: 1.5;
 }
 .alp-rewards-way-item img{
  display: block;
  width: 48px;
 }
  @media screen and (max-width: 999px) {
    .alp-rewards-way-con{
      grid-template-columns: repeat(1, 1fr);
      gap: 16px;
      margin-top: 32px;
    }
    .alp-rewards-way-item{
      padding: 16px 20px;
    }
    .alp-rewards-way-item-title {
      margin-top: 8px;
    }
    .alp-rewards-way-item img{
      width: 40px;
    }
  }
{% endstyle %}

<div class="alp-section alp-rewards-way-wrapper {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container alp-rewards-way-container page-width {{ container }}">
    <h4 class="alp-rewards-way-bigTitle headline__h4">{{ st.title }}</h4>
    <div class="alp-rewards-way-con">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {% liquid
            assign bs = block.settings
          %}
          <div class="alp-rewards-way-item">
            {% render 'alp-single-image', image: bs.image, width: 1280 %}
              <div class="alp-rewards-way-item-title headline__h4">{{ bs.title }}</div>
              <div class="alp-rewards-way-item-desc">{{ bs.description }}</div>
          </div>
        {%- endfor -%}
      {% endif %}
    </div>
  </div>
</div>

