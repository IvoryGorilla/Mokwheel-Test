{% schema %}
{
  "name": "Inverter Nav",
  "class": "inverter-nav",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section Title"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "BACK TO EBIKE"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Block Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "target",
          "label": "Target ID"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Inverter Nav"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};
{%- endcapture -%}

{% style %}
  .inverter-nav {
    position: sticky;
    top: 105px;
    z-index: 20;
  }
  .alp-sticky-inverter-wrapper {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    width: 100%;
  }
  .alp-sticky-inverter-back {
    padding: 13px 0;
  }
  .inverter-nav-producturl {
    font-size: 14px;
    font-weight: 500;
    line-height: 120%;
    text-align: center;
    color: #FFFFFF;
      
    display: flex;
    padding: 10px 15px;
    border-radius: 4px;
    background: #1A1A1A;
  }
  .alp-sticky-inverter-jump-to a {
    padding-bottom: 8px;
    transition: all 0.3s ease;
    position: relative;
    display: block;
    font-size: 14px;
    font-weight: 500;
    line-height: 150%;
    color: #999999;
  }
  .alp-sticky-inverter-jump-to a:hover {
    position: relative;
    color: #1A1A1A;
  }
  .alp-sticky-inverter-jump-to a.active {
    position: relative;
    color: #1A1A1A;
  }
  .alp-sticky-inverter-back .alp-btn.button-type-primary:hover {
    background: #1a1a1a;
    border-color: #1a1a1a;
  }
  [data-stid^='separator-'] {
    height: 0px;
  }
  @media screen and (min-width: 751px) {
    .alp-sticky-inverter-flex {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 30px;
    }
    .alp-sticky-inverter-jump-to {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 50%;
    }
    .alp-sticky-inverter-jump-to a:hover:after,
    .alp-sticky-inverter-jump-to a.active:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: #1a1a1a;
    }
  }
  @media screen and (max-width: 750px) {
    .inverter-nav {
      top: 95px;
    }
    .alp-sticky-inverter-flex {
      padding-bottom: 13px;
    }
    .alp-sticky-inverter-back {
      padding-bottom: 0;
    }
    .alp-sticky-inverter-top {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .alp-sticky-inverter-jump-to {
      display: none;
      width: 100%;
      padding: 1em 2em;
      background-color: #f9f9f9;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
    }
    .alp-sticky-inverter-jump-to a:hover:after,
    .alp-sticky-inverter-jump-to a.active:after {
      content: '';
      position: absolute;
      left: -12px;
      bottom: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 6px;
      height: 6px;
      border-radius: 100px;
      background: #1a1a1a;
    }
    .dropdown-title {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .dropdown-title span {
      font-size: 14px;
      font-weight: 500;
      line-height: 1.5;
    }
  }
{% endstyle %}

<div class="alp-sticky-inverter-wrapper alp-section {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-sticky-inverter-container page-width {{ container }}">
    <div class="alp-sticky-inverter-flex hide_mobile">
      <div class="alp-sticky-inverter-jump-to">
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {% liquid
              assign bs = block.settings
            %}
            <a class="{% if forloop.first %}active{% endif %}" href="#{{ bs.target }}">{{ bs.text }}</a>
          {%- endfor -%}
        {% endif %}
      </div>
      <div class="alp-sticky-inverter-back">
        {% if st.link_text != blank %}
          <a class="inverter-nav-producturl" href="javascript:history.back()" >
            {{ st.link_text }}
          </a>
        {% endif %} 
      </div>
    </div>
    <div class="alp-sticky-inverter-flex hide_desktop">
      <div class="alp-sticky-inverter-top">
        <div class="dropdown-title">
          <span id="dropdownTitle"></span>
          {%- render 'icon-bottom' -%}
        </div>
        <div class="alp-sticky-inverter-back">
          {% render 'alp-btn',
            url: st.url,
            type: 'primary',
            text: st.link_text,
            textcolor: '#fff',
            bgcolor: '#1A1A1A',
            size: 'small'
          %}
        </div>
      </div>
      <div class="alp-sticky-inverter-jump-to">
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {% liquid
              assign bs = block.settings
            %}
            <a class="{% if forloop.first %}active{% endif %}" href="#{{ bs.target }}">{{ bs.text }}</a>
          {%- endfor -%}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const subNavHeight = $('.alp-sticky-inverter-wrapper').outerHeight();
    const barHeight = $('.alp-announcement-bar-section').outerHeight();
    const headerHeight = $('.alp-header-container').outerHeight();

    $('.alp-sticky-inverter-jump-to a').click(function (e) {
      e.preventDefault();
      //$(this).addClass('active').siblings().removeClass('active');
      const targetId = $(this).attr('href');
      const targetOffset = $(targetId).offset().top - subNavHeight - barHeight - headerHeight - 10;
      console.log(targetOffset)
      window.scrollTo({
        top: targetOffset,
        behavior: 'smooth',
      });
    });

    $(window).scroll(function () {
      const scrollPosition = $(window).scrollTop();
      $(`[data-stid^='separator-']`).each(function () {
        const currentSection = $(this);
        const sectionId = '#' + currentSection.attr('id');
        const sectionTop = currentSection.offset().top - barHeight - headerHeight - subNavHeight - 50;
        if (scrollPosition >= sectionTop) {
          $('.alp-sticky-inverter-jump-to a').removeClass('active');
          $('.alp-sticky-inverter-jump-to a[href="' + sectionId + '"]').addClass('active');
        }
      });
    });

    // 当点击.dropbtn时，切换.dropdown-content的显示和隐藏
    $('.dropdown-title').click(function () {
      const $parent = $(this).parent();
      $parent.next('.alp-sticky-inverter-flex.hide_desktop .alp-sticky-inverter-jump-to').slideToggle();
    });

    // 当点击下拉菜单以外的区域时，隐藏下拉菜单
    $(document).click(function (e) {
      if (!$(e.target).closest('.dropdown-title').length) {
        $('.alp-sticky-inverter-flex.hide_desktop .alp-sticky-inverter-jump-to').hide();
      }
    });
    var aTags = $('.alp-sticky-inverter-flex.hide_desktop .alp-sticky-inverter-jump-to a.active');
    document.getElementById('dropdownTitle').textContent = aTags.html();

    // 点击下拉菜单更新标题
    var dropdownContent = document.querySelector('.alp-sticky-inverter-flex.hide_desktop .alp-sticky-inverter-jump-to');
    dropdownContent.addEventListener('click', function (event) {
      if (event.target.tagName === 'A') {
        document.getElementById('dropdownTitle').textContent = event.target.textContent;
      }
    });

    $('html, body').animate({ scrollTop: 0 }, 100);
  });
</script>
