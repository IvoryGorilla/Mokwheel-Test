{% schema %}
{
  "name": "Alp Help FAQ ",
  "settings": [
    {
      "type": "text",
      "id": "home_text",
      "label": "Home Text",
      "default": "FAQ"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": " Title",
          "default": "Products"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text 1",
          "default": "Do I need a license for riding Ebike?"
        },
        {
          "type": "richtext",
          "id": "content1",
          "label": "Content 1"
        },
        {
          "type": "text",
          "id": "text2",
          "label": "Text 2",
          "default": "Do I need a license for riding Ebike?"
        },
        {
          "type": "richtext",
          "id": "content2",
          "label": "Content 2"
        },
        {
          "type": "text",
          "id": "text3",
          "label": "Text 3",
          "default": "Do I need a license for riding Ebike?"
        },
        {
          "type": "richtext",
          "id": "content3",
          "label": "Content 3"
        },
        {
          "type": "text",
          "id": "text4",
          "label": "Text 4",
          "default": "Do I need a license for riding Ebike?"
        },
        {
          "type": "richtext",
          "id": "content4",
          "label": "Content 4"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": " Button Text",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": " Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alp Help FAQ"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
      --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
  {%- endcapture -%}

{% style %}
.alp-faq-item-text{
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  gap: 10px;
}
.alp-help-faq-item{
  margin-top: 16px;
  border-radius: 16px;
  background: #fff;
  padding: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
}
.alp-faq-item-text .text_content{
  font-size: 16px;
  font-weight: 700;
}
.alp-help-faq-button{
  color: #E83F0C;
  font-size: 16px;
  text-decoration: underline;
}
  @media (min-width: 1000px){
    .alp-help-faq-box{
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
      margin-top: 48px;
    }
    .alp-help-faq-item-title svg{
      display: none;
    }
    .alp-help-faq-item-wrapper{
      background: #f8f8f8;
      border-radius: 16px;
      padding: 48px 32px;
    }
    .alp-help-faq-item{
      margin-top: 16px;
      border-radius: 16px;
      background: #fff;
      padding: 20px;
    }
    .alp-help-faq-button{
      padding-left: 20px;
      margin-top: 32px;
    }
  }
  @media (max-width: 999px){
    .alp-help-faq-box{
      display: flex;
      flex-direction: column;
      margin-top: 24px;
      background: #f8f8f8;
      border-radius: 16px;
      padding: 32px 20px;
    }
    .alp-help-faq-item-wrapper{
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      padding: 24px 0;
    }
    .alp-help-faq-item-wrapper:first-child{
      padding-top: 0;
    }
    .alp-help-faq-item-title{
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      gap: 10px;
    }
    .alp-help-faq-item-container{
      display: none;
    }
    .alp-help-faq-item-title svg {
        transition: 0.5s;
    }
    .alp-help-faq-item-wrapper.active .alp-help-faq-item-title svg{
      transform: rotate(-90deg);
    } 
    .alp-help-faq-button{
      margin-top: 24px;
    }
  }

  .alp-help-faq-item .jd-animated-plus::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }
  .alp-help-faq-item.active .jd-animated-plus::before {
    opacity: 0;
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .alp-help-faq-item .animated-plus {
    position: relative;
    width: 10px;
    height: 10px;
  }

  .alp-help-faq-item .animated-plus::before,
  .alp-help-faq-item .animated-plus::after {
    position: absolute;
    content: '';
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-90deg);
    background-color: currentColor;
    transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
  }

  .alp-help-faq-item .animated-plus::before {
    width: 10px;
    height: 2px;
    opacity: 1;
  }

  .alp-help-faq-item .animated-plus::after {
    width: 2px;
    height: 10px;
  }

  .alp-help-faq-item.active .animated-plus::before {
    opacity: 0;
  }

  .alp-faq-item-content {
    display: none;
    font-size: 16px;
  }
{% endstyle %}

<div class="alp-section  {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }}">
    <h2 class="headline__h2">{{ st.home_text }}</h2>
    <div class="alp-help-faq-box">
      {%- for block in section.blocks -%}
        {% liquid
          assign bs = block.settings
        %}
        <div class="alp-help-faq-item-wrapper">
            <div class="alp-help-faq-item-title">
              <h4 class="headline__h4">{{ bs.title }}</h4>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                  <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m19 9l-7 6l-7-6"/>
              </svg> 
            </div>
            <div class="alp-help-faq-item-container">
              <div class="alp-help-faq-item">
                <div class="alp-faq-item-text">
                  <div class="text_content">{{ bs.text1 }}</div>
                  <span class="animated-plus jd-animated-plus"></span>
                </div>
                <div class="alp-faq-item-content">{{ bs.content1 }}</div>
              </div>
              <div class="alp-help-faq-item">
                <div class="alp-faq-item-text">
                  <div class="text_content">{{ bs.text2 }}</div>
                  <span class="animated-plus jd-animated-plus"></span>
                </div>
                <div class="alp-faq-item-content">{{ bs.content2 }}</div>
              </div>
              {% if bs.text3 != blank or bs.content3 != blank %}
              <div class="alp-help-faq-item">
                <div class="alp-faq-item-text">
                  <div class="text_content">{{ bs.text3 }}</div>
                  <span class="animated-plus jd-animated-plus"></span>
                </div>
                <div class="alp-faq-item-content">{{ bs.content3 }}</div>
              </div>
              {% endif %}
              {% if bs.text4 != blank or bs.content4 != blank %}
                <div class="alp-help-faq-item">
                  <div class="alp-faq-item-text">
                    <div class="text_content">{{ bs.text4 }}</div>
                    <span class="animated-plus jd-animated-plus"></span>
                  </div>
                  <div class="alp-faq-item-content">{{ bs.content4 }}</div>
                </div>
                {% endif %}
              <div class="alp-help-faq-button">
                  <a href="{{ bs.button_url }}">{{ bs.button_text }}</a>
              </div>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    $('.alp-faq-item-text').click(function () {
      let $this = $(this).parent();
      $this.toggleClass('active');
      $this.siblings().removeClass('active');
      $this.find('.alp-faq-item-content').stop().slideToggle(400);
      $this.siblings().find('.alp-faq-item-content').stop().slideUp(400);
    });

    $('.alp-help-faq-item-title').click(function () {
      let $this = $(this).parent();
      $this.toggleClass('active').siblings().removeClass('active');
      $this.find('.alp-help-faq-item-container').slideToggle(400);
      $this.siblings().find('.alp-help-faq-item-container').slideUp(400);
    });
  });
</script>
