{% schema %}
{
  "name": "Alp Sales Deals P-2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "Single Product Item",
      "type": "item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "discount_title",
          "label": "Discount Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "big_image",
          "label": "Big Image"
        },
        {
          "type": "image_picker",
          "id": "discount_image",
          "label": "Discount Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "text",
          "id": "url_text",
          "label": "URL Text",
          "default": "SHOP NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alp Sales Deals P-2"
    }
  ]
}
{% endschema %}

<style>
  .sales-deals-2-title {
    margin-bottom: max(3vw, 2em);
    margin-left: auto;
    margin-right: auto;
    width: 88%;
    max-width: 1200px;
    text-align: center;
  }
  .sales-deals-2-item {
    text-align: center;
  }

  .sales-deals-wrapper-2 {
    padding-top: max(6vw, 2em);
  }

  h2.sales-deals-title {
    margin-bottom: 0.25em;
    line-height: 1.25;
    font-size: max(min(48px, 4vw), 32px);
    font-weight: 700;
    color: #1a1a1a;
  }

  .sales-deals-2-item-text-title {
    margin-bottom: max(3vw, 2em);
  }

  .sales-deals-2t-warpper {
    padding: 6.5vw 6%;
  }

  .sales-deals-container {
    position: relative;
    z-index: 10;
  }

  .sales-deals-2t-warpper {
    margin-top: -7vw;
    padding-top: 8vw;
  }
  .sales-deals-2t-item-image {
    position: relative;
  }

  .sales-deals-2t-item-image > picture > img {
    aspect-ratio: 1/1;
    object-fit: contain;
  }

  img.sales-deals-2t-item-image-discount {
    position: absolute;
    z-index: 10;
    left: 0;
    top: 0;
    width: max(22%, 64px);
  }

  .sales-deals-2t-item-content {
    padding: 6%;
    padding-top: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
    justify-content: space-between;
  }

  .sales-deals-2t-item-content .sales-deals-list-button {
    margin-top: 0;
    font-size: 14px;
  }

  .sales-deals-2t-item-content-title h3 {
    /* font-size: max(min(32px, 2.75vw), 24px); */
    font-size: clamp(18px, 3vw, 20px);
    line-height: 1.25;
  }

  .sales-deals-2t-item-content-price span.price-item.price-item--sale {
    margin: 0;
    /* font-size: max(min(32px, 2.75vw), 24px); */
    font-size: clamp(18px, 2.75vw, 20px);
    color: #ed7b25;
    line-height: 1;
  }

  .sales-deals-2t-item-content-price {
    display: flex;
    align-items: center;
    gap: 3px;
  }

  .sales-deals-2t-item-content-price s.price-item.price-item--regular {
    text-decoration: line-through;
    display: block;
    opacity: 0.75;
  }
  .sales-deals-2t-item-content-price .price--on-sale .price__sale {
    flex-direction: column-reverse;
  }
  .sales-deals-2t-item-content-price .price__regular .price-item--regular {
    font-size: clamp(18px, 2.75vw, 20px);
    color: #ed7b25;
  }
  .sales-deals-2t-item-content-colorlist .alp-colors-swatch-i.active:before,
  .form__inputs_radio input:checked + .alp-colors-swatch-i:before {
    opacity: 0;
  }

  .sales-deals-2t-item-content-title {
    width: 100%;
    margin-bottom: 0.5em;
  }
  body .sales-deals-2t-swiper.swiper {
    overflow: visible;
  }

  .sales-deals-2t-warpper {
    overflow: hidden;
  }

  .sales-deals-2-item-image {
    margin: auto;
    width: 66%;
  }

  .sales-deals-2t-item {
    position: relative;
    background: #f7f7f7;
    border-radius: 16px;
  }

  a.full-item-url {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 20;
  }

  .sales-deals-2t-item::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
    /* border: 1px solid #e87c2a; */
    transition: 0.5s;
  }

  .sales-deals-2t-item:hover::before {
    /* border: 4px solid #e87c2a; */
  }

  .sales-deals-2t-item-image > picture > img {
    transition: 0.5s;
    display: block;
  }

  .sales-deals-2t-item:hover .sales-deals-2t-item-image > picture > img {
    transform: scale(0.985);
  }

  .sales-deals-2t-item-content {
    transition: 0.5s;
  }

  .sales-deals-2t-item:hover .sales-deals-2t-item-content {
    transform: translateY(-8px);
  }

  a.sales-deals-list-item-url {
    transition: 0.5s;
  }

  a.sales-deals-list-item-url:hover {
    transform: translate(0px, -4px);
    background: #f46800;
  }
  .sales-deals-list-switcher img {
    display: block;
    max-width: 80px;
  }

  .sales-deals-list-switcher {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: max(3vw, 2em);
    gap: 2em;
    display: none;
  }

  .sales-deals-list-switcher > div {
    transition: 0.25s;
    cursor: pointer;
  }

  .sales-deals-list-switcher .swiper-button-disabled {
    opacity: 0.1;
    cursor: default;
  }
  .sales-deals-2-item-text-title {
    margin-left: auto;
    margin-right: auto;
    width: 88%;
    max-width: 1200px;
  }

  @media screen and (max-width: 749px) {
    .sales-deals-wrapper-2 {
      display: none;
    }
    .sales-deals-2t-warpper {
      margin-top: 0;
    }

    .sales-deals-2-title {
      /*display: block;*/
      text-align: center;
      margin-bottom: 1em;
    }

    .sales-deals-wrapper-2 {
      padding-top: 3em;
      padding-bottom: 3em;
    }
  }

  /* 第一次调整 */
  .sales-deals-2-item-image {
    display: none;
  }

  .sales-deals-2t-warpper {
    margin-top: 0;
    padding-top: 0vw;
  }

  .sales-deals-container {
    /* padding-top: max(5vw, 3em); */
    padding: 0;
  }

  .sales-deals-wrapper-2 {
    padding-top: 0;
  }

  .sales-deals-2t-item-content-colorlist span {
    display: block;
    width: 16px;
    height: 16px;
    border: 1px solid #0000004d;
    border-radius: 100px;
    margin-right: 6px;
  }

  .sales-deals-2t-item-content-colorlist {
    display: flex;
    margin-bottom: 8px;
  }

  .sales-deals-2t-item-content-title {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    border-bottom: 1px solid #d3d3d3;
    padding-bottom: 8px;
    margin-bottom: 14px;
  }

  .sales-deals-2t-item-content-title h3 {
    margin-bottom: 0;
  }

  .sales-deals-container .alp-product-item-grid-n1 .alp-productAcessories {
    display: none;
  }

  .sales-deals-container .alp-product-item-grid-n1 .alp-productAcessories + .alp-product-item-price {
    margin-top: 8px;
  }

  .sales-deals-container .alp-product-item-features .alp_product__badge_i {
    /* min-height: 40px; */
    display: inline-flex;
    align-items: center;
    border: 1px solid #1a1a1a;
    background: #ffffff;
    color: #1a1a1a;
    font-weight: 500;
    /* font-size: clamp(14px, 1.25vw, 16px); */
  }

  @media (min-width: 99px) {
    .sales-deals-container .swiper-wrapper .swiper-slide {
      height: auto;
      align-self: stretch;
      display: flex;
    }

    .sales-deals-container .swiper-wrapper {
      align-items: stretch;
    }

    .sales-deals-container .swiper-wrapper .swiper-slide .alp-product-item-slie-item {
      display: flex;
      height: 100%;
    }

    .sales-deals-container
      .swiper-wrapper
      .swiper-slide
      .alp-product-item-slie-item
      .alp-product-item-1.type-item-02.alp-product-item-wrapper {
      display: flex;
      flex-direction: column;
    }

    .sales-deals-container
      .swiper-wrapper
      .swiper-slide
      .alp-product-item-slie-item
      .alp-product-item-1.type-item-02.alp-product-item-wrapper
      .alp-product-item-info.type-02 {
      flex: 1;
      align-items: stretch;
      justify-content: stretch;
      flex-direction: column;
    }

    .sales-deals-container
      .swiper-wrapper
      .swiper-slide
      .alp-product-item-slie-item
      .alp-product-item-1.type-item-02.alp-product-item-wrapper
      .alp-product-item-info.type-02
      .alp-product-item-title-wrap {
      flex: 1;
    }
  }

  @media screen and (min-width: 750px) {
    .sales-deals-2t-item-content-colorlist span {
      width: 22px;
      height: 22px;
    }
  }

  @media screen and (max-width: 749px) {
    .sales-deals-2t-item-content-price span {
      font-size: 13px;
    }

    .sales-deals-2t-item-content-price {
      display: block;
    }

    .sales-deals-2t-item-content-price > * {
      display: block;
    }

    .sales-deals-2t-item-content {
      align-items: center;
    }

    a.sales-deals-list-item-url {
      font-size: 13px;
    }
  }
  .sales-deals-2t-item-content-colorlist span {
    background-size: cover !important;
    background-repeat: no-repeat;
  }
  .sales-deals-2t-item-image > picture {
    mix-blend-mode: darken;
  }
  .alp-product-item-grid-n1 .alp-product-item-title .headline__h4 {
    color: #000000;
  }
</style>

<div class="sales-deals-wrapper-2">
  <div class="sales-deals-container">
    <div class="sales-deals-2-title">
      <h2 class="sales-deals-title">{{ section.settings.title }}</h2>
    </div>
    <div class="sales-deals-2-warpper hidden">
      <div class="sales-deals-2-swiper swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="sales-deals-2-item">
                <div class="sales-deals-2-item-text-title">
                  <h2 class="sales-deals-title">{{ block.settings.discount_title }}</h2>
                </div>
                <div class="sales-deals-2-item-image">
                  {%- if block.settings.image -%}
                    {%- assign big_image = block.settings.big_image | default: block.settings.image -%}
                    <picture>
                      <source srcset="{{ big_image | image_url }}" media="(min-width: 750px)">
                      <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.product_name }}">
                    </picture>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="sales-deals-2t-warpper">
      <div class="sales-deals-2t-swiper swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {%- assign product = block.settings.product -%}
            {%- assign product_image = product.first_available_variant.featured_image
              | default: product.featured_image
            -%}
            <div class="swiper-slide">
              {% comment %}
                <div class="sales-deals-2t-item">
                  <a href="{{ block.settings.url }}" class="full-item-url"> </a>
                  <div class="sales-deals-2t-item-image">
                    {% comment %}
                      {% render 'alp-single-image',
                        image: product_image,
                        width: 1280,
                        aspect_ratio: '3/2',
                        alt: product.title
                      %}
                    {% endcomment %}
                    {% render 'alp-responsive-image',
                      image: product_image,
                      image_mobile: product_image,
                      desktop_width: 800,
                      mobile_width: 400,
                      aspect_ratio: '3/2',
                      alt: product.title
                    %}
                    <div class="alp-product-item-features">
                      {%- if product.metafields.custom.full_reduction != blank -%}
                        <div class="alp_product__badge_i">{{- product.metafields.custom.full_reduction -}}</div>
                      {%- endif -%}
                    </div>
                    {% comment %}
                      <img
                        class="sales-deals-2t-item-image-discount"
                        src="{{ block.settings.discount_image | image_url }}"
                        alt="{{ block.settings.title }}"
                      >
                    {% endcomment %}
                  </div>
                  <div class="sales-deals-2t-item-content">
                    <div class="sales-deals-2t-item-content-title">
                      <h3>{{- product.title -}}</h3>
                      <div class="sales-deals-2t-item-content-colorlist">
                        {% render 'alp-color-swatch-for-list', product: product %}
                      </div>
                    </div>
                    <div class="sales-deals-2t-item-content-price">
                      {% render 'price', product: product %}
                    </div>
                    <div class="sales-deals-list-button">
                      <a href="{{ block.settings.url }}" class="sales-deals-list-item-url">
                        {{- block.settings.url_text -}}
                      </a>
                    </div>
                  </div>
                </div>
              {% endcomment %}
              <div class="alp-product-grid-i alp-product-item-slie-item">
                {% render 'alp-product-item-grid-n1', product: product, aspect_ratio: '4/3', show_features: false %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="sales-deals-list-switcher">
        <div class="salse-deals-2i-prev">
          <img src="https://cdn.shopify.com/s/files/1/0550/4424/3702/files/arrow-left.png" alt="">
        </div>
        <div class="salse-deals-2i-next">
          <img src="https://cdn.shopify.com/s/files/1/0550/4424/3702/files/arrow-right.png" alt="">
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    var sales_deals_AAA_Swiper = new Swiper('.sales-deals-2-swiper', {
      speed: 800,
      effect: 'fade',
      fadeEffect: {
        crossFade: true,
      },
    });
    var sales_deals_BBB_Swiper = new Swiper('.sales-deals-2t-swiper', {
      speed: 600,
      slidesPerView: 1,
      spaceBetween: 10,
      freeMode: true,
      breakpoints: {
        320: {
          //当屏幕宽度大于等于320
          slidesPerView: 1.3,
          spaceBetween: 16,
        },
        768: {
          //当屏幕宽度大于等于768
          slidesPerView: 2.5,
          spaceBetween: 20,
        },
        1280: {
          //当屏幕宽度大于等于1280
          slidesPerView: 3.3,
          spaceBetween: 30,
        },
      },
      navigation: {
        nextEl: '.salse-deals-2i-next',
        prevEl: '.salse-deals-2i-prev',
      },
    });
    $('.sales-deals-2t-swiper .swiper-slide').on('mouseenter', function () {
      sales_deals_AAA_Swiper.slideTo($(this).index());
    });
  });
</script>
