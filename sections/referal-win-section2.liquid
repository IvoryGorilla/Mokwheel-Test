{% schema %}
{
  "name": "referal-win-section2",
  "class": "referal-win-section2",
  "settings": [
    {
      "type": "text",
      "id": "referal-win-section2-title",
      "label": "Referal Win Section2 Title"
    },
    {
      "type": "text",
      "id": "referal-win-section2-subtitle",
      "label": "Referal Win Section2 Subtitle"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    },
    {
      "type": "text",
      "id": "referal-win-section2-button",
      "label": "Referal Win Section2 Button"
    },
    {
      "type": "url",
      "id": "referal-win-section2-url",
      "label": "Referal Win Section2 Url"
    }
  ],
  "blocks": [
    {
      "type": "card-item",
      "name": "Card Item",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "referal-win-section2-card-image",
          "label": "Referal Win Section2 Card Image"
        },
        {
          "type": "text",
          "id": "referal-win-section2-card-title",
          "label": "Referal Win Section2 Card Title"
        },
        {
          "type": "textarea",
          "id": "referal-win-section2-card-content",
          "label": "Referal Win Section2 Card Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "referal-win-section2"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
  --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};
{%- endcapture -%}

{% style %}
  .referal-win-section2-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 48px;
    padding-top: 80px;
    padding-bottom: 80px;
    margin-bottom: 100px;
  }
  .referal-win-section2-title {
    font-size: 48px;
    font-weight: bold;
    line-height: 120%;
    text-align: center;
    text-transform: capitalize;
  }
  .referal-win-section2-subtitle {
    margin-top: 16px;
    font-size: 18px;
    font-weight: normal;
    line-height: 150%;
    text-align: center;
  }
  .referal-win-section2-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 创建3列，每列等宽 */
    gap: 30px;
  }
  .referal-win-section2-card {
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #ffffff;
    border-radius: 4px;
  }
  .referal-win-section2-card-image {
    width: 80px;
    height: 80px;
  }
  .referal-win-section2-card-title {
    margin-top: 80px;
    font-size: 24px;
    font-weight: bold;
    line-height: 120%;
    text-transform: capitalize;
  }
  .referal-win-section2-card-content {
    margin-top: 24px;
    font-size: 16px;
    font-weight: normal;
    line-height: 150%;
    text-align: center;
  }
  .referal-win-section2-button {
    padding: 15px 40px;
    background: #1a1a1a;
    border-radius: 4px;
    display: flex;
    font-size: 16px;
    font-weight: 500;
    line-height: 120%;
    text-transform: capitalize;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .referal-win-section2-container {
      gap: 24px;
      padding-top: 40px;
      padding-bottom: 40px;
      margin-bottom: 60px;
    }
    .referal-win-section2-title {
      font-size: 28px;
    }
    .referal-win-section2-subtitle {
      margin-top: 10px;
      font-size: 16px;
    }
    .referal-win-section2-content {
      grid-template-columns: repeat(1, 1fr);
      gap: 24px;
    }
    .referal-win-section2-card {
      padding: 24px;
    }
    .referal-win-section2-card-image {
      width: 60px;
      height: 60px;
    }
    .referal-win-section2-card-title {
      margin-top: 24px;
    }
    .referal-win-section2-card-content {
      font-size: 14px;
      margin-top: 16px;
    }
    .referal-win-section2-button {
      padding: 15.5px 32px;
      font-size: 14px;
    }
  }
{% endstyle %}

<div class="alp-section {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }} referal-win-section2-container">
    <div class="referal-win-section2-top">
      <h2 class="referal-win-section2-title">{{ st.referal-win-section2-title }}</h2>
      <div class="referal-win-section2-subtitle">{{st.referal-win-section2-subtitle }}</div>
    </div>
    <div class="referal-win-section2-content">
      {%- for block in section.blocks -%}
        {% liquid
          assign bs = block.settings
        %}
        <div class="referal-win-section2-card">
          {% if bs.referal-win-section2-card-image != blank %}
            <div class="referal-win-section2-card-image">
              <img
                src="{{ bs.referal-win-section2-card-image | image_url: width: 1200 }}"
                width="auto"
                height="auto"
              >
            </div>
          {% endif %}
          <div class="referal-win-section2-card-title">
            {{ bs.referal-win-section2-card-title }}
          </div>
          <div class="referal-win-section2-card-content">
            {{ bs.referal-win-section2-card-content }}
          </div>
        </div>
      {%- endfor -%}
    </div>
    {% if st.referal-win-section2-button %}
      <div class="referal-win-section2-bottom">
        <a href="{{ st.referal-win-section2-url }}" class="referal-win-section2-button">
          {{ st.referal-win-section2-button }}
        </a>
      </div>
    {% endif %}
  </div>
</div>