<div id="alinkGuiList" class="Guide-tab jd-Top">
  <div class="Guide-product_head">
    <div class="Guide_p_h">{{section.settings.header}}</div>
    <div class="Guide_p_d">{{section.settings.desc}}</div>
  </div>
  <div class="">
    <div class="Guide_product_box">
      <div class="pc">
      <ul class="Guide_box-ul">
        <div class="swiper GuideSwiper">
          <div class="swiper-wrapper">
            {% for item in section.blocks %}
              <li class="swiper-slide {% if item.settings.slideshow %}active{%endif%}">
                <a href="{{item.settings.url}}#alinkGuiList" >{{item.settings.cate_name}}</a>
              </li>
            {% endfor %}
          </div>
        </div>
        </ul>
      </div>
      <div class="mobile">
        <ul class="Guide_box-ul">
            <div class="swiper mguideSwiper" thumbsSlider="">
                <div class="swiper-wrapper">
                    {% for item in section.blocks %}
                        <li class="swiper-slide {% if item.settings.slideshow %}active{%endif%}">
                          <a href="{{item.settings.url}}#alinkGuiList" >{{item.settings.cate_name}}</a>
                        </li>
                    {% endfor %}
                </div>
            </div>
        </ul>
    </div>
      <ul class="Guide_box-de pc">
        {% for block in section.blocks %}
        <li class="{% if forloop.first %}selected{%endif%}">
            
             {% if block.settings.video_url !=blank %}
              <img loading="lazy"  class="preview-img" {% render 'image-attributes', image: block.settings.img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
              
              <video data-component="responsive-video" playsinline=""
                  class="responsive-video preview-video js-video-preview lazyloaded" preload="auto" autoplay="" controls
                  loop="" muted="muted"
                  src="{{block.settings.video_url }}"
                  poster="">
              </video>
              {% elsif block.settings.video_url == blank%}
              <img loading="lazy"  class="preview-image" {% render 'image-attributes', image: block.settings.img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
         {% endif %}
        </li>
        {% endfor %}
  
      </ul>
      <ul class="Guide_box-de mobile">
        <div class="swiper guideTabSwiper">
          <div class="swiper-wrapper">
          {% for block in section.blocks limit:1 %}
          <li class="swiper-slide {% if forloop.first %}selected{%endif%}">
              
              {% if block.settings.video_url !=blank %}
                <img loading="lazy"  class="preview-img" {% render 'image-attributes', image: block.settings.img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
                
                <video data-component="responsive-video" playsinline=""
                    class="responsive-video preview-video js-video-preview lazyloaded" preload="auto" autoplay="" controls
                    loop="" muted="muted"
                    src="{{block.settings.video_url }}"
                    poster="">
                </video>
                {% elsif block.settings.video_url == blank%}
                <img loading="lazy"  class="preview-image" {% render 'image-attributes', image: block.settings.img, sizes: '300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600,1700,1800,1900,2000' %}>
          {% endif %}
          </li>
          {% endfor %}
        </div>
      </div>
      </ul>
    </div>
  </div>


</div>

