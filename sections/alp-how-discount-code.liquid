{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

<style>
  .alp-how-discount-code-container h2{
    margin-bottom: 40px;
  }
  .alp-how-discount-code-container .item-list{
    display: flex;
    justify-content: space-between;
  }
  .alp-how-discount-code-container .item-list p{
      margin: 0;
  }
  .alp-how-discount-code-container .item-list .number{
      color: #E83F0C;
      margin-bottom: 10px;
  }
  .alp-how-discount-code-container .item-list .img-box{
      margin-top: 24px;
  }
  .alp-how-discount-code-container .item-list .img-box picture img{
    display: block;
  }
  @media (min-width:751px){
    .alp-how-discount-code-container .item-list .item h4{
      height: 60px;
    }
    {% if section.settings.choose_three %}
      #block-{{ section.id }} {
        gap: 8%;
      } 
    {% else %}
      #block-{{ section.id }} {
        gap: 100px;
      }
    {% endif %}
  }
  @media (max-width:751px) {
    .alp-how-discount-code-container h2{
      margin-bottom: 32px;
    }
    .alp-how-discount-code-container .item-list{
      flex-direction: column;
      gap: 40px;
    }
    .alp-how-discount-code-container .item-list .top{
      display: flex;
      align-items: center;
    }
    .alp-how-discount-code-container .item-list .number{
      margin-right: 8px;
      margin-bottom: 0;
    }
    .alp-how-discount-code-container .item-list .img-box{
      margin-top: 21px;
    }
  }
</style>
  <div class="alp-how-discount-code-wrapper alp-section {{ reset_spacing }}" style="{{ style }}">
    <div class="alp-how-discount-code-container alp-section-container page-width {{ container }}">
        <h2 class="headline__h2s">{{section.settings.title}}</h2>
        <div class="item-list" id="block-{{ section.id }}">
            {% for item in section.blocks %}
              <div class="item">
                <div class="top">
                  <div class="headline__h2s number">0{{ forloop.index}}</div>
                  <h4 class="headline__h4s">{{ item.settings.title}}</h4>
                </div>
                <div class="img-box">
                  {% render 'alp-single-image', image: item.settings.img, width: 1280 %}
                </div>
              </div>
            {% endfor %}
        </div>
    </div>
  </div>

  {% schema %}
  {
  "name": "alp-how-discount-code",
  "class": "Alp How Discount Code",
  "presets": [{
    "name": "Alp How Discount Code",
    "settings": {
  
    }
  }],
  "blocks": [
    {
      "type": "mega_menu", 
      "name": "Mega menu", 
      "settings":[
        {  
          "type": "richtext",
          "id": "title",
          "label": "title" 
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "image" 
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title" 
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "choose_three",
      "label": "Item Choose three",
      "default": false
    }
  ]
  }
  {% endschema %}

