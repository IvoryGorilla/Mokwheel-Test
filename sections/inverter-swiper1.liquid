<script>
  document.addEventListener('DOMContentLoaded', () => {
    let swiperId = '{{ section.id }}';
    const swiperEl = document.querySelector(`.inverter-swiper1-swiper[data-blockId="${swiperId}"]`);
    
    // 只在移动端初始化Swiper
    const initSwiper = () => {
      if (window.innerWidth <= 750) {
        if (!swiperEl.swiper) {
          new Swiper(swiperEl, {
            slidesPerView: 1,
            slidesPerGroup : 1,
            speed:600,
            spaceBetween: 30,
            touchRatio : 0.75,
            pagination: {
              el: '.pagination-products',
              clickable :true,
            },
            // add breakpoints
            breakpoints: { 
              320: {  
                slidesPerView: 1,
                slidesPerGroup : 1,
              },
              1280: {  
                slidesPerView: 2,
                slidesPerGroup : 2,
              },
            },
          });
        }
      } else {
        // 桌面端销毁Swiper实例
        if (swiperEl.swiper) {
          swiperEl.swiper.destroy(true, true);
        }
      }
    };
    
    // 初始检查
    initSwiper();
    
    // 窗口大小变化时重新检查
    window.addEventListener('resize', () => {
      initSwiper();
    });
  });
</script>