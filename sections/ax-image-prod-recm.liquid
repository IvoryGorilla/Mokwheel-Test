{% schema %}
{
  "name": "AX Image Product Recm",
  "class": "ax-image-prod-recm",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio",
      "label": "Aspect Ratio",
      "default": "512/640"
    },
    {
      "type": "text",
      "id": "image_aspect_ratio_mobile",
      "label": "Aspect Ratio Mobile",
      "default": "340/230"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container-fluid",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "img_width_desktop",
      "label": "Image Width Desktop",
      "default": "1920"
    },
    {
      "type": "text",
      "id": "img_width_mobile",
      "label": "Image Width Mobile",
      "default": "750"
    },
    {
      "type": "text",
      "id": "st_max_width",
      "label": "Content Max Width",
      "default": "var(--gl-max-width)"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Block Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "AX Image Product Recm"
    }
  ]
}
{% endschema %}

{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}

<style>
  [data-stid="{{ section.id }}"] {
    --aspect-ratio: {{ st.image_aspect_ratio }};
    --aspect-ratio-mobile: {{ st.image_aspect_ratio_mobile }};
    --content-max-width: {{ st.st_max_width }};
  }
  [data-stid="{{ section.id }}"].alp-section.no-padding-top {
    padding-top: 0;
  }
</style>

{% style %}
  /* .ax-image-prod-recm-1.alp-section {
    padding: var(--spacing) 0;
  } */
  .ax-image-prod-recm-1-title {
    text-align: center;
    margin-bottom: clamp(32px, 4.25vw, 64px);
  }

  .ax-image-prod-recm-1-item-image-inner {
    aspect-ratio: var(--aspect-ratio);
    width: 100%;
  }

  .ax-image-prod-recm-1-item-image-inner img {
    display: block;
    border-radius: var(--alp-border-radius);
  }

  .ax-image-prod-recm-1-description {
    font-size: clamp(14px, 1.05vw, 18px);
    line-height: 1.5;
    opacity: 0.8;
  }

  .ax-image-prod-recm-1-item-content {
    font-size: clamp(14px, 1.05vw, 16px);
    opacity: 0.8;
  }
  .ax-image-prod-recm-1-title {
    margin-left: auto;
    margin-right: auto;
    max-width: 950px;
  }
  .ax-image-prod-recm-1-item-content p {
    margin: 0;
  }

  .ax-image-prod-recm-1-item-image-inner {
    overflow: hidden;
    border-radius: var(--alp-border-radius);
  }

  .ax-image-prod-recm-1-container.page-width {
    --gl-max-width: var(--content-max-width, 1440px);
  }

  .ax-slider-prod-recm-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px 16px;
  }

  @media (min-width: 768px) {
    .ax-image-prod-recm-1-description p {
      margin-bottom: 0;
    }

    .ax-image-prod-recm-1-description p:not(:first-child) {
      margin-top: 0.25em;
    }

    .ax-image-prod-recm-1-flex {
      display: flex;
      gap: 40px;
      flex-wrap: wrap;
    }

    .ax-image-prod-recm-1-col-1 {
      width: 42%;
    }

    .ax-image-prod-recm-1-col-2 {
      width: calc(58% - 40px);
    }
    .ax-image-prod-recm-1-col-2 .swiper-navs-new-3.swiper-pagination-slider {
      margin-top: 32px;
    }
  }
  @media (max-width: 767px) {
    .ax-image-prod-recm-1-item-image-inner img {
      aspect-ratio: var(--aspect-ratio-mobile);
    }

    .ax-image-prod-recm-1-item-image-inner {
      aspect-ratio: var(--aspect-ratio-mobile);
      width: 100%;
    }

    .ax-image-prod-recm-1-title {
      text-align: left;
    }
  }
{% endstyle %}

<div
  class="ax-image-prod-recm-1 alp-section overflow-hidden  {{ reset_spacing }} {{ st.custom_class }}"
  data-stid="{{ section.id }}"
  style="{{ style }}"
>
  <div class="alp-section-container ax-image-prod-recm-1-container page-width {{ container }}">
    <div class="ax-image-prod-recm-1-title">
      {%- if st.title != blank -%}
        <h2 class="headline__h2 big-title">{{ st.title }}</h2>
      {%- endif -%}
      {%- if st.subtitle != blank -%}
        <div class="ax-image-prod-recm-1-description">{{ st.subtitle }}</div>
      {%- endif -%}
    </div>
    <div class="ax-image-prod-recm-1-flex">
      <div class="ax-image-prod-recm-1-col-1 hide_mobile">
        {% if st.image != blank %}
          <div class="ax-image-prod-recm-1-item-image-inner">
            {% render 'alp-responsive-image',
              image: st.image,
              image_mobile: st.image_mobile,
              desktop_width: 1600,
              mobile_width: 900
            %}
          </div>
        {% endif %}
      </div>
      <div class="ax-image-prod-recm-1-col-2">
        <div
          class="ax-image-prod-recm-1-prod-swiper swiper"
          id="{{ section.id | replace: '-', '' | prepend: 'id_' }}"
        >
          {%- if section.blocks.size > 0 -%}
            <div class="swiper-wrapper">
              {%- for block in section.blocks -%}
                {%- liquid
                  assign bs = block.settings
                -%}
                {%- if forloop.index == 1 -%}
                  <div class="ax-image-prod-recm-1-image-item swiper-slide">
                    <div class="ax-slider-prod-recm-grid">
                      {%- for block in section.blocks -%}
                        {%- liquid
                          assign bs = block.settings
                        -%}
                        {%- if forloop.index < 5 -%}
                          <div class="ax-slider-prod-recm-item">
                            {% render 'alp-product-item-grid-2s', product: bs.product, aspect_ratio: '3/2.3' %}
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endif -%}
                {%- if forloop.index == 4 -%}
                  <div class="ax-image-prod-recm-1-image-item swiper-slide">
                    <div class="ax-slider-prod-recm-grid">
                      {%- for block in section.blocks -%}
                        {%- liquid
                          assign bs = block.settings
                        -%}
                        {%- if forloop.index > 4 and forloop.index < 9 -%}
                          <div class="ax-slider-prod-recm-item">
                            {% render 'alp-product-item-grid-2s', product: bs.product, aspect_ratio: '3/2.3' %}
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
            <div class="swiper-navs-new-3 swiper-pagination-slider">
              {% render 'swiper-pagination', class: '' %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script
  type="module"
>
  document.addEventListener('DOMContentLoaded', () => {
    // swiper
    let is_Swiper_Mobile = window.innerWidth < 999;
    var BlockId = '{{ section.id | replace: '-', '' | prepend: 'id_' }}';
    var Swiper_Main_{{ section.id | replace: '-', '' }} = new Swiper(`.ax-image-prod-recm-1-prod-swiper.swiper#${BlockId}`, {
      parallax: true,
      speed: 600,
      spaceBetween: 20,
      scrollbar: {
        el: `.swiper#${BlockId} .swiper-scrollbar`,
        draggable: true,
      },
      pagination: {
        el: `[data-stid="{{ section.id }}"] .alp-swiper-pagination`,
        clickable: true,
      },
      navigation: {
        nextEl: `[data-stid="{{ section.id }}"] .swiper-button-next`,
        prevEl: `[data-stid="{{ section.id }}"] .swiper-button-prev`,
      },
      on: {
        init: function(swiper){

        },
      },
    });
    
  });
</script>
