{% liquid
  assign st = section.settings
  assign container = st.container
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
%}

{%- capture style -%}
    --bg-color: {{ st.bg_color }};--text-color: {{ st.text_color }};--padding-top: {{ st.padding_top }};--padding-bottom: {{ st.padding_bottom }};
{%- endcapture -%}
<style>
  .bicycle-details-list img {
    max-width: 40px;
    aspect-ratio: 1/1;
    height: auto;
    object-fit: contain;
  }
  .bicycle-details-list .Btitle.headline__h3 {
    font-size: clamp(18px, 2.2vw, 24px);
  }
  .bicycle-details-list .item .desc.headline__h5 {
    font-size: clamp(12px, 1.2vw, 16px);
  }
  @media screen and (min-width: 741px) {
    .bicycle-details-list {
      display: flex;
      justify-content: space-around;
    }
    .bicycle-details-list .item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
      text-transform: capitalize;
    }

    .bicycle-details-list .item .Btitle em {
      color: #e83f0c;
      font-style: normal;
    }
    .bicycle-details-list .item .desc {
      /* font-family: Poppins !important; */
      color: #717171;
    }
    .bicycle-details-list .item .desc p {
      margin: 0;
    }
    .bicycle-details-list img {
      width: 100%;
      height: auto;
      object-fit: contain;
    }
    .bicycle-details-list .Btitle {
      margin-top: 10px;
    }
    /* .bicycle-details-list .item:nth-child(2) img {
      height: 56px;
    } */
  }

  @media screen and (max-width: 740px) {
    .alp-section.bicycle-details-list-wrapper {
      padding-top: calc(var(--padding-top) * 2px);
      padding-bottom: calc(var(--padding-bottom) * 2px);
    }

    .bicycle-details-list {
      display: flex;
      justify-content: space-between;
      padding: 0;
      margin: 0;
    }
    .bicycle-details-list .item {
      display: flex;
      flex-direction: column;
      align-items: center;
      color: #fff;
    }
    .bicycle-details-list img {
      width: 30px;
      height: auto;
      object-fit: contain;
    }

    .bicycle-details-list .item .Btitle {
      margin: 1rem 0 0rem;
      color: #000;
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 120%;
      letter-spacing: -0.24px;
      text-transform: capitalize;
    }
    .bicycle-details-list .item .Btitle em {
      color: #e83f0c;
      font-style: normal;
    }
    .bicycle-details-list .item .Btitle p {
      margin: 0;
    }
    .bicycle-details-list .item .desc {
      color: #717171;
      /* font-family: Poppins; */
      font-size: 12px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%; /* 18px */
      text-transform: capitalize;
    }
    .bicycle-details-list .item .desc p {
      margin: 0;
    }
    .bicycle-details-list {
      flex-wrap: wrap;
    }
    .bicycle-details-list .item {
      width: 33.3%;
      padding: 1em 0;
      text-transform: capitalize;
    }
  }
</style>

<div class="alp-section bicycle-details-list-wrapper overflow-hidden {{ reset_spacing }}" style="{{ style }}">
  <div class="alp-section-container page-width {{ container }}">
    <div class="bicycle-details-list bicycle-details">
      {% for block in section.blocks %}
        <div class="item">
          {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
          <h3 class="Btitle headline__h5">{{ block.settings.Btitle }}</h3>
          <div class="desc headline__small">{{ block.settings.desc | strip_html }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "bicycle-details-list",
  "class": "bicycle-details-list-section",
  "settings": [
    {
      "type": "text",
      "id": "Btitle",
      "label": "Btitle",
      "default": "Section Btitle"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "alp-container",
      "options": [
        {
          "value": "alp-container",
          "label": "Default"
        },
        {
          "value": "alp-container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "alp-full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "Item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "Btitle",
          "label": "Btitle"
        },
        {
          "type": "richtext",
          "id": "desc",
          "label": "Desc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bicycle Details List"
    }
  ]
}
{% endschema %}
