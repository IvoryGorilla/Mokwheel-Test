{% liquid
  assign bs = block.settings
%}
<div class="alp-custom-images-grid" style="--aspect-ratio:{{ aspect_ratio | default: '3/2' }}">
  {% for i in (1..3) %}
    {%- if i == 1 -%}
      {% assign image = bs.image_1 %}
      {% assign image_text = bs.image_text_1 %}
    {%- elsif i == 2 -%}
      {% assign image = bs.image_2 %}
      {% assign image_text = bs.image_text_2 %}
    {%- elsif i == 3 -%}
      {% assign image = bs.image_3 %}
      {% assign image_text = bs.image_text_3 %}
    {%- endif -%}
    {% if image != blank %}
      <div class="alp-custom-images-grid-item">
        <div class="alp-custom-images-grid-img">
          {{ image | image_url: width: 600 | image_tag: loading: 'lazy' }}
        </div>
        {% if image_text != blank %}
          <div class="alp-custom-images-grid-text text_content">
            {{ image_text }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
</div>

{% stylesheet %}
  .alp-custom-images-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5em;
  }
  .alp-custom-images-grid-text {
    margin-top: 0.5em;
    font-weight: 600;
  }
  .alp-custom-images-grid-text::before {
    content: '';
    display: block;
    width: 22px;
    height: 3px;
    background: #e83f0c;
    margin-bottom: 0.5em;
  }
  .alp-custom-images-grid-img,
  .alp-custom-images-grid-img img {
    aspect-ratio: var(--aspect-ratio);
    width: 100%;
    object-fit: cover;
  }
  @media (max-width: 768px) {
    .alp-custom-images-grid {
      grid-template-columns: repeat(1, 1fr);
      gap: 1em;
    }
  }
{% endstylesheet %}
